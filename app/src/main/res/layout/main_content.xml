<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main.ui.MainActivity">

    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>

    <RadioGroup
        android:id="@+id/main_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x48"
        android:background="@drawable/bottom_bg"
        android:orientation="horizontal"
        android:padding="@dimen/y1">

        <RadioButton
            android:id="@+id/main_tab_index"
            style="@style/style_main_tab"
            android:drawableTop="@drawable/main_tab_home"
            android:text="@string/main_tab_index" />

        <RadioButton
            android:id="@+id/main_tab_message"
            style="@style/style_main_tab"
            android:drawableTop="@drawable/main_tab_message"
            android:text="@string/main_tab_message" />

        <RadioButton
            android:id="@+id/main_tab_shop"
            style="@style/style_main_tab"
            android:drawableTop="@drawable/main_tab_shop"
            android:text="@string/main_tab_shop" />
        <RadioButton
            android:id="@+id/main_tab_library"
            style="@style/style_main_tab"
            android:drawableTop="@drawable/main_tab_library"
            android:text="@string/main_tab_library" />
    </RadioGroup>
</LinearLayout>
